<h3 class="titles"> {{title}}</h3>
<form  action="../admin/insert-product" method="post"  name="productForm">
    <div class="row">
      <div class="form-group col-lg-5">
        Title
        <input type="text" class="form-control" name="name">
      </div>
      <div class="form-group col-lg-5">
          Color
          <select class="form-control" name="color">
              <option>Black</option>
              <option>Blue</option>
              <option>Yellow</option>
              <option>Red</option>
              <option>white</option>
          </select>
      </div>

    </div>
    <div class="row">

    <div class="form-group col-lg-5" >
          Price
         <input type="text" class="form-control col-lg-5" name="price">
    </div>

        <div class="form-group col-lg-5">
            Quantity
            <input class="form-group col-lg-5" name="quantity">
        </div>
    </div>

    <div class="row">
        <div class="form-control col-lg-5">
            <input type="submit" class="btn  btn-md btn-orange" value="Submit Product" name="submit">
        </div>
    </div>

</form>